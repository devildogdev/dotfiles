{
  "format_on_save": "prettier",
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Catppuccin Mocha"
  },
  "terminal": {
    "toolbar": {
      "title": false
    },
    "alternate_scroll": "on",
    "line_height": "standard",
    "font_family": "Hack Nerd Font Mono",
    "button": false,
    "detect_venv": "off"
  },
  "use_autoclose": false,
  "buffer_font_family": "Hack Nerd Font Mono",
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "never"
  },
  "cursor_blink": false,
  "relative_line_numbers": true,
  "scroll_beyond_last_line": "off",
  "vertical_scroll_margin": 8,
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "scrollbar": {
    "show": "never"
  },
  "tab_bar": {
    "show": false
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": false
  },
  "project_panel": {
    "button": false,
    "scrollbar": {
      "show": "never"
    }
  },
  "outline_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "gutter": {
    "code_actions": false
  },
  "assistant": {
    "enabled": false,
    "button": false,
    "version": "2"
  },
  "features": {
    "inline_completion_provider": "none"
  },
  "journal": {
    "hour_format": "hour24"
  },
  "languages": {
    "Markdown": {
      "soft_wrap": "bounded"
    },
    "Go": {
      "code_actions_on_format": {
        "source.organizeImports": false
      }
    },
    "JavaScript": { "format_on_save": "off" }
  }
}
